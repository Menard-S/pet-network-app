<h1>Adoption Applications</h1>

<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Adopter</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pet</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @adoption_applications.each do |application| %>
      <tr>
         <td class="px-6 py-4 whitespace-nowrap">
          <%= link_to application.adopter.full_name, shelter_namespace_adopter_path(application.adopter), class: "text-indigo-600 hover:text-indigo-900" %>
        <</td> 
        <td class="px-6 py-4 whitespace-nowrap">
          <%= link_to application.pet.name, shelter_namespace_pet_path(application.pet), class: "text-indigo-600 hover:text-indigo-900" %>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
          <%= application.status %>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
          <%= link_to 'View', shelter_namespace_adoption_application_path(application), class: "text-indigo-600 hover:text-indigo-900" %>
          <% if application.submitted? %>
            <%= link_to 'Approve', approve_shelter_namespace_adoption_application_path(application), method: :patch, class: 'ml-2 btn btn-success' %>
            <%= link_to 'Deny', deny_shelter_namespace_adoption_application_path(application), method: :patch, class: 'ml-2 btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
