<h1>Adoption Application Details</h1>

<p><strong>Adopter:</strong> <%= link_to @adoption_application.adopter.full_name, shelter_adopter_path(@adoption_application.adopter) %></p>
<p><strong>Pet:</strong> <%= link_to @adoption_application.pet.name, shelter_pet_path(@adoption_application.pet) %></p>
<p><strong>Status:</strong> <%= @adoption_application.status %></p>
<p><strong>Application Date:</strong> <%= @adoption_application.application_date %></p>

<% if @adoption_application.pending? %>
  <%= link_to 'Approve', approve_shelter_adoption_application_path(@adoption_application), method: :patch, class: 'btn btn-success' %>
  <%= link_to 'Deny', deny_shelter_adoption_application_path(@adoption_application), method: :patch, class: 'btn btn-danger' %>
<% end %>

<%= link_to 'Back to Applications', shelter_adoption_applications_path, class: 'btn btn-secondary' %>
