<h1><%= @pet.name %></h1>

<% if @pet.photo_url.attached? %>
  <%= image_tag @pet.photo_url %>
<% end %>

<p>Species: <%= @pet.species %></p>
<p>Breed: <%= @pet.breed %></p>
<p>Age: <%= @pet.age %></p>
<p>Size: <%= @pet.size %></p>
<p>Gender: <%= @pet.gender %></p>
<p>Temperament: <%= @pet.temperament %></p>
<p>Description: <%= @pet.description %></p>
<p>Adoption Status: <%= @pet.adoption_status.humanize %></p>
<p>Location: <%= @pet.location %></p>

<%= link_to "Edit Pet", edit_shelter_pet_path(@pet.shelter, @pet) %>

<%= link_to "Delete Pet", [@pet.shelter, @pet], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
