<h1>Invite User</h1>

<%= form_with url: invite_user_admin_users_path, method: :post, local: true do %>
  <div class="field">
    <%= label_tag :email, 'Email' %><br>
    <%= email_field_tag :email %>
  </div>

  <div class="field">
  <%= label_tag :username, 'Username' %><br>
  <%= text_field_tag :username %>
</div>

  <div class="actions">
    <%= submit_tag 'Send Invitation' %>
  </div>
<% end %>

<%= link_to 'Back to Dashboard', admin_dashboard_path %>
