<nav class="w-full h-20 flex items-center justify-between relative z-50">
  <%= image_tag('2.png', class: 'w-96 mx-2.5') %>
</nav>

<h1 class="text-3xl font-bold mb-4 text-center text-green-600"><%= @pet.name %></h1>

<div class="flex flex-col md:flex-row items-center md:items-start bg-white shadow-lg rounded-lg p-8 w-full max-w-4xl mx-auto">
  <div class="md:w-1/3 mb-4 md:mb-0 md:mr-8">
    <% if @pet.photos.attached? %>
      <div class="overflow-x-auto whitespace-nowrap">
        <% @pet.photos.each do |photo| %>
          <div class="inline-block relative mr-2">
            <%= image_tag url_for(photo), class: "w-full h-auto rounded-full shadow-md mb-2" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="w-full h-auto bg-gray-200 flex items-center justify-center rounded-lg shadow-md">
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center rounded-lg mb-4">
            <%= image_tag 'paw.png', class: 'w-24 h-24' %>
          </div>
      </div>
    <% end %>
  </div>

  <div class="md:w-2/3">
    <p class="mb-2 text-gray-700"><strong>Species:</strong> <%= @pet.species %></p>
    <p class="mb-2 text-gray-700"><strong>Breed:</strong> <%= @pet.breed %></p>
    <p class="mb-2 text-gray-700"><strong>Age:</strong> <%= @pet.age %></p>
    <p class="mb-2 text-gray-700"><strong>Size:</strong> <%= @pet.size %></p>
    <p class="mb-2 text-gray-700"><strong>Gender:</strong> <%= @pet.gender %></p>
    <p class="mb-2 text-gray-700"><strong>Temperament:</strong> <%= @pet.temperament %></p>
    <p class="mb-2 text-gray-700"><strong>Description:</strong> <%= @pet.description %></p>
    <p class="mb-2 text-gray-700"><strong>Location:</strong> <%= @pet.location %></p>
    <p class="mb-2 text-gray-700"><strong>Adoption Status:</strong> <%= @pet.adoption_status %></p>
  </div>
</div>

<div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-4xl mx-auto mt-8">
  <h2 class="text-2xl font-bold mb-4">Comments</h2>
  <% if @pet.pet_comments.any? %>
    <% @pet.pet_comments.each do |comment| %>
      <div class="mb-4 pb-4 border-b border-gray-200">
        <div class="flex items-start mb-2">
          <div class="w-10 h-10 rounded-full overflow-hidden flex-shrink-0 mr-4">
            <i class="fa fa-user-alt" aria-hidden="true"></i>
          </div>
          <div class="flex-1">
            <p class="text-gray-700 font-semibold"><%= comment.user.username %></p>
            <p class="text-gray-500 text-sm"><%= time_ago(comment.created_at) %></p>
          </div>
        </div>
        <p class="text-gray-700"><%= comment.comment_text %></p>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-gray-500">No comments yet.</p>
  <% end %>
</div>
