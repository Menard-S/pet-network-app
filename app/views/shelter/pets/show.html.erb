<h1><%= @pet.name %></h1>
<p><strong>Species:</strong> <%= @pet.species %></p>
<p><strong>Breed:</strong> <%= @pet.breed %></p>
<p><strong>Age:</strong> <%= @pet.age %></p>
<p><strong>Size:</strong> <%= @pet.size %></p>
<p><strong>Gender:</strong> <%= @pet.gender %></p>
<p><strong>Temperament:</strong> <%= @pet.temperament %></p>
<p><strong>Description:</strong> <%= @pet.description %></p>
<p><strong>Location:</strong> <%= @pet.location %></p>
<p><strong>Adoption Status:</strong> <%= @pet.adoption_status %></p>

<%= form_with(model: @pet, url: update_status_shelter_pet_path(@pet), method: :patch, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :adoption_status, "Update Adoption Status" %>
    <%= form.select :adoption_status, Pet.adoption_statuses.keys.map { |status| [status.titleize, status] }, {}, class: "form-control" %>
  </div>
  <%= form.submit "Update Status", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Pets', shelter_pets_path, class: 'btn btn-secondary' %>