<h1 class="font-bold text-3xl">Adoption Applications</h1>
<br/>

<%= link_to "New Adoption +", new_adopter_adoption_application_path, data: { turbo_frame: "modal" } %>

<table>
  <thead>
    <tr>
      <th>Pet Name</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% if @adoption_applications.present? %>
      <%= render @adoption_applications %>
    <% else %>
      <tr>
        <td colspan="3" class="text-center">No pending applications..</td>
      </tr>
    <% end %>
  </tbody>
</table>
